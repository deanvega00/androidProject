            <EditText
                android:id="@+id/fir_name"
                android:layout_width="fill_parent"
                android:layout_height="40dp"
                android:layout_below="@+id/fg"
                android:layout_alignStart="@+id/mail"
                android:layout_alignLeft="@+id/mail"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="20dp"
                android:alpha=".4"
                android:background="@drawable/round"
                android:drawableLeft="@drawable/profile1"
                android:drawablePadding="15dp"
                android:hint="First Name"
                android:padding="10dp"
                android:singleLine="true"
                android:textColor="#000"
                android:textColorHint="#0b0a0a" />

            <EditText
                android:id="@+id/last_name"
                android:layout_width="fill_parent"
                android:layout_height="40dp"
                android:layout_below="@+id/fg"
                android:layout_alignStart="@+id/mail"
                android:layout_alignLeft="@+id/mail"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="20dp"
                android:alpha=".4"
                android:background="@drawable/round"
                android:drawableLeft="@drawable/profile1"
                android:drawablePadding="15dp"
                android:hint="Last Name"
                android:padding="10dp"
                android:singleLine="true"
                android:textColor="#000"
                android:textColorHint="#0b0a0a" />

            <EditText
                android:id="@+id/con_num"
                android:layout_width="fill_parent"
                android:layout_height="40dp"
                android:layout_below="@+id/fg"
                android:layout_alignStart="@+id/mail"
                android:layout_alignLeft="@+id/mail"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="20dp"
                android:alpha=".4"
                android:background="@drawable/round"
                android:drawableLeft="@drawable/contact"
                android:drawablePadding="15dp"
                android:hint="Contact Number"
                android:inputType="phone"
                android:nextFocusDown="@+id/email"
                android:padding="10dp"
                android:singleLine="true"
                android:textColor="#000"
                android:textColorHint="#0b0a0a" />

            <EditText
                android:id="@+id/stdId"
                android:layout_width="fill_parent"
                android:layout_height="40dp"
                android:layout_below="@+id/fg"
                android:layout_alignStart="@+id/mail"
                android:layout_alignLeft="@+id/mail"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="20dp"
                android:alpha=".4"
                android:background="@drawable/round"
                android:drawableLeft="@drawable/about"
                android:drawablePadding="15dp"
                android:editable="false"
                android:hint="Student Id"
                android:padding="10dp"
                android:singleLine="true"
                android:textColor="#000"
                android:textColorHint="#0b0a0a" />

            <EditText
                android:id="@+id/email"
                android:layout_width="fill_parent"
                android:layout_height="40dp"
                android:layout_below="@+id/fg"
                android:layout_alignStart="@+id/mail"
                android:layout_alignLeft="@+id/mail"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="20dp"
                android:alpha=".4"
                android:background="@drawable/round"
                android:drawableLeft="@drawable/message"
                android:drawablePadding="15dp"
                android:hint="Email"
                android:inputType="textEmailAddress"
                android:padding="10dp"
                android:singleLine="true"
                android:textColor="#000"
                android:textColorHint="#0b0a0a" />

            <EditText
                android:id="@+id/password"
                android:layout_width="fill_parent"
                android:layout_height="40dp"
                android:layout_below="@+id/fg"
                android:layout_alignStart="@+id/mail"
                android:layout_alignLeft="@+id/mail"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="20dp"
                android:alpha=".4"
                android:background="@drawable/round"
                android:drawableLeft="@drawable/password"
                android:drawablePadding="15dp"
                android:hint="Password"
                android:inputType="textPassword"
                android:padding="10dp"
                android:singleLine="true"
                android:textColor="#000"
                android:textColorHint="#0b0a0a" />

            <EditText
                android:id="@+id/com_pass"
                android:layout_width="fill_parent"
                android:layout_height="40dp"
                android:layout_below="@+id/fg"
                android:layout_alignStart="@+id/mail"
                android:layout_alignLeft="@+id/mail"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="20dp"
                android:alpha=".4"
                android:background="@drawable/round"
                android:drawableLeft="@drawable/password"
                android:drawablePadding="15dp"
                android:hint="Confirm Password"
                android:inputType="textPassword"
                android:padding="10dp"
                android:singleLine="true"
                android:textColor="#000"
                android:textColorHint="#0b0a0a" />

            <EditText
                android:id="@+id/birt_date"
                android:layout_width="fill_parent"
                android:layout_height="40dp"
                android:layout_below="@+id/fg"
                android:layout_alignStart="@+id/mail"
                android:layout_alignLeft="@+id/mail"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="20dp"
                android:alpha=".4"
                android:background="@drawable/round"
                android:drawableLeft="@drawable/gift"
                android:drawableRight="@drawable/calendar"

                android:drawablePadding="15dp"
                android:focusable="false"
                android:hint="Birth Date"
                android:padding="10dp"
                android:singleLine="true"
                android:textColor="#000"
                android:textColorHint="#0b0a0a" />

            <EditText
                android:id="@+id/course"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/fg"
                android:layout_alignStart="@+id/mail"
                android:layout_alignLeft="@+id/mail"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="20dp"
                android:alpha=".4"
                android:background="@drawable/round"
                android:drawableLeft="@drawable/course"
                android:drawablePadding="15dp"

                android:editable="false"
                android:focusable="false"
                android:hint="Select Course"
                android:padding="10dp"
                android:singleLine="true"
                android:textColor="#000"
                android:textColorHint="#0b0a0a" />
